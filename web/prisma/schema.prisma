  RESPONSE
  STORAGE
  MEMBER
}

enum FeatureCategory {
  BASIC
  PRO
  PREMIUM
}

enum FeatureType {
  TRUE_FALSE_QUESTION
  SINGLE_CHOICE_QUESTION
  MULTIPLE_CHOICE_QUESTION
  FREE_TEXT_QUESTION
  ADVANCED_QUESTION_TYPES
  AUTO_GRADING
  MANUAL_GRADING
  PASSWORD_PROTECTION
  PERMISSIONS_MANAGEMENT
  AUDIT_LOG
  SUBDOMAIN
  CUSTOM_DESIGN
  CUSTOM_DEVELOPMENT
  MEDIA_UPLOAD
  QUESTION_BANK
  SECTIONS
  ANALYTICS
  EXCEL_EXPORT
  CERTIFICATES
  AI_QUIZ_GENERATION
  TEAM_MANAGEMENT
  PRIORITY_SUPPORT
  SLA_GUARANTEE
  ON_PREMISE
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
}

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum TeamInvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
}

