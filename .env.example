# ExamForge Environment Variables
# Copy this file to .env and fill in your actual values

# ===============================================
# Database Configuration
# ===============================================
DATABASE_URL="postgresql://username:password@localhost:5432/examforge_db"

# ===============================================
# NextAuth.js Configuration (Required)
# ===============================================
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-32-characters-minimum"
NEXTAUTH_URL="http://localhost:3000"

# ===============================================
# OAuth Providers (Optional)
# ===============================================
# Google OAuth - Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth - Get from: https://github.com/settings/developers
GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# ===============================================
# Stripe Payment Configuration (Optional)
# ===============================================
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Stripe Price IDs (from Terraform output)
STRIPE_PRO_MONTHLY_PRICE_ID="price_your_monthly_price_id"
STRIPE_PRO_YEARLY_PRICE_ID="price_your_yearly_price_id"

# ===============================================
# Storage Configuration (Optional - MinIO/S3)
# ===============================================
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY_ID="your-minio-access-key"
S3_SECRET_ACCESS_KEY="your-minio-secret-key"
S3_BUCKET_NAME="examforge-media"
S3_REGION="us-east-1"

# ===============================================
# Email Configuration (Optional)
# ===============================================
RESEND_API_KEY="re_your_resend_api_key"

# ===============================================
# Development/Debug Settings
# ===============================================
# Set to "development" for local development
NODE_ENV="development"

# Enable debug logging (optional)
# DEBUG="true"

# ===============================================
# Production Only Settings
# ===============================================
# Uncomment and set for production deployment

# Production database URL
# DATABASE_URL="postgresql://user:password@your-db-host:5432/examforge_prod"

# Production NextAuth URL
# NEXTAUTH_URL="https://your-domain.com"

# Production Stripe keys
# STRIPE_SECRET_KEY="sk_live_your_live_secret_key"
# STRIPE_PUBLISHABLE_KEY="pk_live_your_live_publishable_key"

# Production storage endpoint
# S3_ENDPOINT="https://your-s3-endpoint.com"